{
  "name": "jascha030/wp-sequoia-theme",
  "description": "Template repo for WordPress theme using: jascha030/wp-sequoia, jascha030/wp-plugin-lib, jascha030/config-lib, Webpack, PostCSS and Tailwind.",
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "license": "MIT",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Jascha030\\SequoiaTheme\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jascha030\\SequoiaTheme\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.4||^8.0",
    "jascha030/wp-plugin-lib": "^1.3",
    "jascha030/config-lib": "^1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php"
  }
}
